.position {
  width: 100%;
  height: 60rpx;
  background: #000;
  overflow: hidden;
}

.triangle {
  width: 0;
  height: 0;
  border-top: 10rpx solid #fff;
  border-left: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  margin-top: 10rpx;
}

.shop-list {
  width: 100%;
  height: 320rpx;
  position: relative;
  border-radius: 30rpx;
  overflow: hidden;
}

.shop-list-image {
  width: 100%;
  height: 100%;
}

.shop-list-box {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.banner {
  width: 100%;
  height: 240rpx;
  position: relative;
  top: 0;
  left: 0;
  z-index: 100;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-text {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
}

.banner-btn {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  border: 2px solid #ff425b;
  width: 120rpx;
  height: 40rpx;
}

.all {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 50;
  background: rgba(0, 0, 0, 0.5);
  padding-top: 300rpx;
}

.all-course {
  height: 60rpx;
  width: 100%;
  position: relative;
  top: 0;
  left: 0;
  z-index: 80;
}

.all-list {
  width: 100%;
  height: 60rpx;
}
