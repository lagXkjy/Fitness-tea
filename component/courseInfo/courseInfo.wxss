.wrapper {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}

.left {
  width: 80%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.content {
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: center;
  width: 76%;
  height: 100%;
}

.name {
  color: #000;
  font-size: 28rpx;
}

.info {
  font-size: 22rpx;
  color: #8c8c8c;
  margin: 10rpx 0;
}

.time {
  font-size: 22rpx;
}

.show-time {
  color: #ff425b;
  margin-right: 16rpx;
}

.price {
  margin-right: 16rpx;
}

.old-price {
  color: #8c8c8c;
  text-decoration: line-through;
}

.btn {
  color: #ff425b;
  border: 1px solid #ff425b;
  box-sizing: border-box;
  padding: 6rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  position: relative;
  top: 0;
  left: 0;
  z-index: 1;
}

.tag {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 150rpx;
  height: 150rpx;
  transform: rotateZ(45deg);
  z-index: 0;
}

.tag-box {
  width: 100%;
  background: #ff425b;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  padding: 4rpx 0;
}
